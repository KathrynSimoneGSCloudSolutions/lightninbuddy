<aura:component implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" access="global" >
    <aura:attribute name="title" type="String" default="" access="global"/>
    <aura:attribute name="bodyText" type="String" default="" access="global"/>
    <aura:attribute name="backgroundImgUrl" type="String" access="global"/>
    <aura:attribute name="bannerImage" type="String" default="" access="global"/>
    <aura:attribute name="tileConfigJson" type="String" default="" access="global"/>
    <aura:attribute name="tiles" type="Object[]" default="" access="global"/>
    <aura:handler name="init" value="{!this}" action="{!c.initialize}"/>
    
    <div class="slds-welcome-mat">
        <div class="slds-welcome-mat__info" style="{!(v.backgroundImgUrl !=null)?'padding-bottom:3rem;background-image: url('+v.backgroundImgUrl+')':'padding-bottom:3rem;'}">
            <div class="slds-welcome-mat__info-content">
                <h2 id="welcome-mat-16-label" class="slds-welcome-mat__info-title">{!v.title}</h2>
                <p>{!v.bodyText}
                   </p>
                <br/>
                <img src="{!v.bannerImage}" />
            </div>
        </div>
        <aura:if isTrue="{!v.tileConfigJson!=null}">
            <ul class="slds-welcome-mat__tiles slds-p-around_medium">
                <aura:iteration items="{!v.tiles}" var="theTile">
                    <li class="slds-welcome-mat__tile">
                        <a href="{!theTile.linkUrl}" target="_blank" class="slds-box slds-box_link slds-box_x-small slds-media">
                            <div class="slds-media__figure slds-media__figure_fixed-width slds-align_absolute-center slds-m-left_xx-small">
                                <div class="slds-welcome-mat__tile-icon-container">
                                    <span class="slds-icon_container">
                                        <lightning:icon iconName="{!theTile.sldsIcon}"/>
                                    </span>
                                </div>
                            </div>
                            <div class="slds-media__body slds-border_left slds-p-around_small">
                                <h3 class="slds-welcome-mat__tile-title">{!theTile.title}</h3>
                                <p class="slds-welcome-mat__tile-description">{!theTile.bodyText}</p>
                            </div>
                        </a>
                    </li>        
                </aura:iteration>        
            </ul>            
            
        </aura:if>
    </div>	
</aura:component>